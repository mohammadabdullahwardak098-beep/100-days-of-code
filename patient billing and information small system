print("Welcome to Ali Janah hospital patient billing and information system")
print(input("what is your name?"))
print(input("how old are you?"))
print("Please specify your gender:")
print("1.Male")
print("2.Female")
choice=input("Enter 1 or 2:")
if choice=="1":
    gender="Male"
elif choice=="2":
    gender="Female"
else:
    gender="invalid choice"
print(f"Your gender is {gender}")
print("what is your sickness kind:")
print("3.Asthma")
print("4.Heart disease")
print("5.TB")
print("6.Flu")
print("7.COVID-19")
print("8.Cancer")
print("9.Anemia")
print("10.Malaria")
